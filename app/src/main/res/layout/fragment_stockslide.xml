                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/home_arrow"
                        android:gravity="center"
                        android:text="查看更多"
                        android:textColor="@color/text_c2"
                        android:textSize="12sp" />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@color/home_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_chengjiaoe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />
                </RelativeLayout>
            </LinearLayout>
            <!--换手率-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/new_order_bg_white"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stay_line4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/home_huan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

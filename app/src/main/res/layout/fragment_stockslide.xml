                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/stay_line2"
                        android:text="成交量"
                        android:textColor="@color/text_maincolor"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        />


                    <TextView
                        android:id="@+id/text_more2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/home_arrow"
                        android:gravity="center"
                        android:text="查看更多"
                        android:textColor="@color/text_c2"
                        android:textSize="12sp" />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@color/home_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_chengjiaoliang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />
                </RelativeLayout>
            </LinearLayout>
            <!--成交额-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/new_order_bg_white"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stay_line3"
                        android:layout_width="wrap_content"

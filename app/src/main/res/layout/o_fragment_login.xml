<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/o_user_barheight"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="30dp"

            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="10dp"
            android:background="@drawable/obg_kuang_user">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:gravity="center"
                android:text="+86"
                android:textSize="15sp"
                android:visibility="visible" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/o_user_barheight"
                android:background="@color/o_line_user" />

            <EditText
                android:id="@+id/edit_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/o_user_barheight"
                android:background="@null"
                android:drawablePadding="10dp"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="11"
                android:padding="8dp"
                android:textColor="@color/text_maincolor"
                android:textColorHint="@color/o_text_second_color"
                android:textSize="@dimen/o_edit_size" />


        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/o_user_barheight"

            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"

            android:background="@drawable/obg_kuang_user">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="15dp"
                android:src="@mipmap/o_user_pass"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/o_user_barheight"
                android:background="@null"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/text_maincolor"
                android:textColorHint="@color/o_text_second_color"
                android:textSize="@dimen/o_edit_size" />


            <ImageView
                android:id="@+id/img_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:padding="15dp"
                android:src="@mipmap/o_login_eyeclose"
                android:visibility="visible" />


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="@dimen/margin"
                android:text="联系客服"
                android:textColor="@color/o_text_second_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_20"
                android:paddingTop="10dp"
                android:paddingBottom="@dimen/margin"
                android:text="忘记密码？"
                android:textColor="@color/o_text_second_color"
                android:textSize="13sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/o_user_barheight"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="40dp"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/gradient_maincolor"
            android:padding="10dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>
    <com.ltqh.qh.view.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:use_type="use_padding_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_20"
                android:src="@mipmap/home_lingdang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="币发星球"
                android:textColor="@color/text_maincolor"
                android:textSize="@dimen/title_size"

                />


            <ImageView
                android:id="@+id/img_service"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_15"
                android:src="@mipmap/img_kefu"
                android:visibility="visible" />


        </RelativeLayout>


        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            >


            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"

                    >

                    <RelativeLayout
                        android:id="@+id/layout_search"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:layout_weight="1"
                        android:background="@drawable/bg_shape_home_search">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:text="搜索内容"
                            android:textColor="@color/text_a8a8" />


                    </RelativeLayout>
                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="@dimen/margin_15"
                        android:background="@drawable/o_bg_white"
                        android:orientation="vertical">-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_info"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_icon1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@string/text_class"
                                android:textColor="@color/text_secondcolor"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="行业课堂学习"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_tool"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin"
                            android:layout_marginRight="@dimen/margin"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_icon2"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@string/text_conversion"
                                android:textColor="@color/text_secondcolor"
                                android:textSize="13sp"
                                android:visibility="visible"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="行业工具换算"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_feedback"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_icon3"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@string/text_back"

                                android:textColor="@color/text_secondcolor"
                                android:textSize="13sp"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="解答用户困惑"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:visibility="gone"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_question"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_icon4"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@string/text_report"
                                android:textColor="@color/text_secondcolor"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="解答用户困惑"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:visibility="gone"

                                />
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="@dimen/margin_15"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/banner_one" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_top"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:visibility="visible" />


                    <!-- </LinearLayout>-->


                </LinearLayout>


            </android.support.design.widget.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:id="@+id/layout_report"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@color/o_bar_white"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:src="@mipmap/o_laba_icon" />

                    <TextSwitcher
                        android:id="@+id/ts_news"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:inAnimation="@anim/slide_in_from_bottom"
                        android:outAnimation="@anim/slide_out_to_top" />


                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin"
                        android:padding="@dimen/margin"
                        android:src="@mipmap/o_delete_market" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:visibility="gone">

                    <com.ltqh.qh.view.SkinInfoEnhanceTabLayout
                        android:id="@+id/home_tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:tabIndicatorColor="@color/maincolor"
                        app:tabIndicatorHeight="3dp"
                        app:tabIndicatorWidth="25dp"
                        app:tabSelectTextColor="@color/maincolor"
                        app:tabTextColor="@color/o_text_5c5e76"
                        app:tab_Mode="mode_fixed" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/o_line"
                    android:visibility="gone" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />




                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/banner_article"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"
                    android:visibility="visible"
                    app:AutoPlayTime="5000"
                    app:pageChangeDuration="800"
                    app:pointsVisibility="false"
                    />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_attention"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"


                    />


            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

    </com.ltqh.qh.view.StatusBarHeightView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/o_bar_white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"

        >

        <ImageView
            android:id="@+id/img_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/o_task_one"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_toRightOf="@+id/img_task"
            android:layout_marginLeft="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="--"
                android:textColor="@color/o_text_3433"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/text_subname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="--"
                android:textColor="@color/o_text_8289"
                android:textSize="11sp"

                />


        </LinearLayout>



        <TextView
            android:id="@+id/text_join"
            android:layout_width="74dp"
            android:layout_height="33dp"
            android:background="@drawable/o_bg_kuang_maincolor"
            android:text="立即参与"
            android:gravity="center"
            android:textColor="@color/maincolor"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            />


    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@color/o_line"
        android:visibility="visible" />
</LinearLayout>
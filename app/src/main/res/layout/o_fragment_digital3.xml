<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <!--    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >-->




    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_top"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:visibility="visible"
        android:background="@drawable/o_bg_white"
        android:layout_margin="@dimen/margin_15"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/o_bg_white"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:orientation="vertical">




    <com.ltqh.qh.view.EnhanceTabLayout
        android:id="@+id/home_tab"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tab_height"
        app:tabIndicatorColor="@color/maincolor"
        app:tabIndicatorHeight="3dp"
        app:tabIndicatorWidth="25dp"
        app:tabSelectTextColor="@color/maincolor"
        app:tabTextColor="@color/text_secondcolor"
        app:tab_Mode="mode_fixed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"

            android:text="@string/o_text_shangpin"
            android:textColor="@color/text_c1c1"
            android:textSize="13sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_price_current"
            android:textColor="@color/text_c1c1"
            android:textSize="13sp"

            />

        <LinearLayout
            android:id="@+id/layout_up_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_up_down"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/text_rank"
                android:textColor="@color/text_c1c1"
                android:textSize="13sp" />



        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    </LinearLayout>
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
</LinearLayout>
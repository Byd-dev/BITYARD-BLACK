<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/o_user_barheight"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="30dp"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="10dp"
            android:background="@drawable/obg_kuang_user">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center"
                android:text="+86"
                android:textSize="15sp"
                android:visibility="visible" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/o_user_barheight"
                android:background="@color/o_line_user" />

            <EditText
                android:id="@+id/edit_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="@dimen/o_user_barheight"
                android:background="@null"
                android:drawablePadding="10dp"
                android:hint="请输入手机号码"
                android:inputType="numberSigned"
                android:maxLength="11"
                android:padding="8dp"
                android:textColor="@color/text_maincolor"
                android:textColorHint="@color/o_text_second_color"
                android:textSize="@dimen/o_edit_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:padding="15dp"
                android:visibility="gone" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/o_user_barheight"

            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"

            android:layout_marginBottom="10dp"
            android:background="@drawable/obg_kuang_user">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="15dp"
                android:src="@mipmap/o_user_pass"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/o_user_barheight"
                android:background="@null"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/text_maincolor"
                android:textColorHint="@color/o_text_second_color"
                android:textSize="@dimen/o_edit_size" />

            <ImageView
                android:id="@+id/img_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:padding="15dp"
                android:src="@mipmap/o_login_eyeclose"
                android:visibility="visible" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/o_user_barheight"

            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"

            android:layout_marginBottom="10dp"
            android:background="@drawable/obg_kuang_user">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="15dp"
                android:src="@mipmap/user_code"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_imgcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:background="@null"
                android:drawablePadding="10dp"
                android:hint="请输入图片验证码"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/text_maincolor"
                android:textColorHint="@color/o_text_second_color"
                android:textSize="@dimen/o_edit_size" />

            <ImageView
                android:id="@+id/img_code"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/o_try" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/o_user_barheight"

            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"

            android:layout_marginBottom="10dp"
            android:background="@drawable/obg_kuang_user">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="15dp"
                android:src="@mipmap/o_user_code"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/o_user_barheight"
                android:background="@null"
                android:drawablePadding="10dp"
                android:hint="请输入验证码"
                android:padding="8dp"
                android:textColor="@color/text_maincolor"
                android:textColorHint="@color/o_text_second_color"
                android:textSize="@dimen/o_edit_size" />

            <TextView
                android:id="@+id/text_getcode"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/margin"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/maincolor"
                android:textSize="15sp" />


        </FrameLayout>


        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/o_user_barheight"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="40dp"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/gradient_maincolor"
            android:padding="10dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/o_check_true" />

            <TextView
                android:id="@+id/text_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_15"
                android:text="@string/text_register_agree"
                android:textColor="@color/o_text_second_color"
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/text_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_15"
                android:text="@string/text_register_xieyi"
                android:textColor="@color/maincolor"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />


        </LinearLayout>

    </LinearLayout>

    <!--</ScrollView>-->
</RelativeLayout>
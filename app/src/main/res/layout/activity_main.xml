<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">


    <FrameLayout
        android:id="@+id/layout_fragment_containter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="visible"
        android:background="@color/background_maincolor" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/white"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_home"
            android:gravity="center"
            android:maxLines="1"
            android:text="发现"
            android:textColor="@color/sel_switcher_txt"
            android:textSize="10sp"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:visibility="visible"
            android:checked="true"
            android:drawableTop="@drawable/tab_info"
            android:gravity="center"
            android:maxLines="1"
            android:text="行情"
            android:textColor="@color/sel_switcher_txt"
            android:textSize="10sp"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/tab_four"
            android:gravity="center"
            android:maxLines="1"
            android:text="资讯"
            android:textColor="@color/sel_switcher_txt"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_publish"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/tab_add"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:visibility="gone"
            />



        <RadioButton
            android:id="@+id/radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/tab_shequ"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/sel_switcher_txt"
            android:textSize="10sp"
            android:text="发现"
            android:textStyle="bold"
            android:visibility="gone" />


        <RadioButton
            android:id="@+id/radio_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"

            android:checked="false"
            android:drawableTop="@drawable/tab_my"
            android:gravity="center"
            android:maxLines="1"

            android:textColor="@color/sel_switcher_txt"
            android:textSize="10sp"
            android:text="我的"
            android:textStyle="bold"
            android:visibility="visible" />

    </RadioGroup>

</LinearLayout>
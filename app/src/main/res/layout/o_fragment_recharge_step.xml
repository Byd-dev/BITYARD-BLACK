<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/o_bar_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin"
            android:gravity="center"
            android:text="账户余额"
            android:textColor="@color/o_text_6770"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="--"
            android:textColor="@color/o_text_3433_white"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/o_market_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/o_bar_white"
        android:orientation="vertical"
        android:visibility="visible"

        >


        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:text="充值金额(元)"
            android:textColor="@color/o_text_959d"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_20"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="¥"
                android:textColor="@color/o_text_3433"

                android:textSize="41sp" />

            <EditText
                android:id="@+id/edit_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入金额"
                android:inputType="numberDecimal"
                android:textColor="@color/o_text_3433_white"
                android:textColorHint="@color/o_text_959d"
                android:textSize="41sp" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15"
                android:src="@mipmap/o_delete_icon"
                android:visibility="gone" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="@dimen/margin_15"
        android:background="@drawable/new_order_bg_mainclor"
        android:padding="10dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:text="温馨提示"
        android:textColor="@color/o_text_ec40"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/text_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:text="*充值必须含有小数,否则无法充值到账,例如100.1"
        android:textColor="@color/o_text_959d"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:text="*实时到账,0手续费"
        android:textColor="@color/o_text_959d"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/text_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:text="*单笔最低充值"
        android:textColor="@color/o_text_959d"

        android:textSize="13sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:text="*每日充值总额无上限"
        android:textColor="@color/o_text_959d"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/text_tip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:text="*二维码仅可使用一次,每次充值需要重新申请获取二维码,重复扫码付款造成的资金损失将自行承担。"
        android:textColor="@color/o_text_959d"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_lianxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*如需帮助请"
            android:textColor="@color/o_text_959d"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_lianxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textColor="@color/maincolor"

            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>